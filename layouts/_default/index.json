{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- if not .Draft -}}
    {{- $.Scratch.Add "index" (dict
      "title" .Title
      "keywords" (default "" .Params.keywords)
      "section" .Section
      "date" (.Date.Format "2006-01-02")
      "formatted_date" (.Date.Format "January 2, 2006")
      "desc" (default "" (.Summary | plainify | truncate 150))
      "summary" (default "" (.Summary | plainify))
      "permalink" .Permalink
    ) -}}
    {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}